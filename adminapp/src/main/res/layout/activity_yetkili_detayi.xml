<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".view.YetkiliDetayiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/yetkili_detayi_resim"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/ic_launcher_background"></ImageView>


            <TextView
                android:id="@+id/yetkili_detayi_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#660099"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"></TextView>



            <TextView
                android:id="@+id/yetkili_detayi_universite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_university_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>


            <TextView
                android:id="@+id/yetkili_detayi_bolum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_graduate_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>


            <TextView
                android:id="@+id/yetkili_detayi_memleket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_turkey_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/yetkili_detayi_makam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_parliament_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>



            <TextView
                android:id="@+id/yetkili_detayi_dogum_yili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_age_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/yetkili_detayi_gorev_baslangic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_start_30"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>


            <TextView
                android:id="@+id/yetkili_detayi_bilgilendirme"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yetkili hakkÄ±nda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textAlignment="center"></TextView>


            <TextView
                android:id="@+id/yetkili_detayi_aciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:textSize="16sp"></TextView>




        </LinearLayout>


    </ScrollView>

</LinearLayout>