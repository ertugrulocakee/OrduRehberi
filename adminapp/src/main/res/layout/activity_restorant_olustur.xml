<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.RestorantOlusturActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center">

         <EditText
             android:id="@+id/restorantAdiOlustur"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="text"
             android:hint="@string/restorantAdiOlustur"
             android:maxLength="25"
             android:textSize="18sp"
         ></EditText>

         <EditText
             android:id="@+id/restorantTipiOlustur"
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="text"
             android:maxLength="20"
             android:textSize="18sp"
             android:hint="@string/restorantTipiOlustur"
         ></EditText>

         <TextView
             android:id="@+id/restorantResimBilgisiText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="@string/restorantResimBilgisi"
             android:textAlignment="center"
             android:textColor="#660099"
             android:textStyle="bold"
             android:textSize="18sp"></TextView>




         <ImageView
             android:id="@+id/restorantGorseli"
             android:layout_width="300dp"
             android:layout_height="250dp"
             android:layout_marginTop="10dp"
             android:onClick="resimSecRestorant"
             app:srcCompat="@drawable/eklegorsel"></ImageView>


         <TextView
             android:id="@+id/menuResimBilgisiText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="#660099"
             android:textAlignment="center"
             android:textSize="18sp"
             android:textStyle="bold"
             android:text="@string/restorantMenuBilgisi"
             android:layout_marginTop="20dp"
             ></TextView>


         <ImageView
             android:id="@+id/restorantMenu"
             android:layout_width="300dp"
             android:layout_height="250dp"
             android:layout_marginTop="10dp"
             android:onClick="resimSecMenu"
             app:srcCompat="@drawable/menuerto"></ImageView>

         <EditText
             android:id="@+id/restorantTelefonuOlustur"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:inputType="phone"
             android:maxLength="20"
             android:textSize="16sp"
             android:hint="@string/restorantTelefonuOlustur"></EditText>




         <EditText
             android:id="@+id/restorantTutariOlustur"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:inputType="number"
             android:maxLength="5"
             android:textSize="16sp"
             android:hint="@string/restorantOrtalamaTutar"></EditText>

     <TextView
         android:id="@+id/haftalikCalismaSaatiBilgisiText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="#660099"
         android:textAlignment="center"
         android:textStyle="bold"
         android:textSize="18sp"
         android:text="@string/restorantHaftalikCalismaBilgilendirme"
         android:layout_marginTop="20dp"
         ></TextView>


         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

        <Button
            android:id="@+id/restorantPazartesiGiris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pazartesiBaslangic"
            android:onClick="pazartesiGiris"
            android:layout_weight="3">


        </Button>


        <Button
            android:id="@+id/restorantPazartesiCikis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pazartesiCikis"
            android:layout_marginLeft="2dp"
            android:onClick="pazartesiCikis"
            android:layout_weight="3">


        </Button>


        <Button
            android:id="@+id/restorantPazartesiKapali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kapali"
            android:layout_marginLeft="2dp"
            android:onClick="pazartesiKapali"
            android:layout_weight="3">


        </Button>


    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/restorantSaliGiris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saliBaslangic"
                    android:onClick="saliGiris"
                    android:layout_weight="3">


                </Button>


                <Button
                    android:id="@+id/restorantSaliCikis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saliCikis"
                    android:layout_marginLeft="2dp"
                    android:onClick="saliCikis"
                    android:layout_weight="3">


                </Button>


                <Button
                    android:id="@+id/restorantSaliKapali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kapali"
                    android:layout_marginLeft="2dp"
                    android:onClick="saliKapali"
                    android:layout_weight="3">


                </Button>


            </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/restorantCarsambaGiris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carsambaBaslangic"
                        android:onClick="carsambaGiris"
                        android:layout_weight="3">


                    </Button>


                    <Button
                        android:id="@+id/restorantCarsambaCikis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carsambaCikis"
                        android:layout_marginLeft="2dp"
                        android:onClick="carsambaCikis"
                        android:layout_weight="3">


                    </Button>


                    <Button
                        android:id="@+id/restorantCarsambaKapali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kapali"
                        android:layout_marginLeft="2dp"
                        android:onClick="carsambaKapali"
                        android:layout_weight="3">


                    </Button>


                </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/restorantPersembeGiris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/persembeBaslangic"
                            android:onClick="persembeGiris"
                            android:layout_weight="3">


                        </Button>


                        <Button
                            android:id="@+id/restorantPersembeCikis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/persembeCikis"
                            android:layout_marginLeft="2dp"
                            android:onClick="persembeCikis"
                            android:layout_weight="3">


                        </Button>


                        <Button
                            android:id="@+id/restorantPersembeKapali"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kapali"
                            android:layout_marginLeft="2dp"
                            android:onClick="persembeKapali"
                            android:layout_weight="3">


                        </Button>


                    </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/restorantCumaGiris"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cumaBaslangic"
                                android:onClick="cumaGiris"
                                android:layout_weight="3">


                            </Button>


                            <Button
                                android:id="@+id/restorantCumaCikis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cumaCikis"
                                android:layout_marginLeft="2dp"
                                android:onClick="cumaCikis"
                                android:layout_weight="3">


                            </Button>


                            <Button
                                android:id="@+id/restorantCumaKapali"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kapali"
                                android:layout_marginLeft="2dp"
                                android:onClick="cumaKapali"
                                android:layout_weight="3">


                            </Button>


                        </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/restorantCumartesiGiris"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cumartesiBaslangic"
                                    android:onClick="cumartesiGiris"
                                    android:layout_weight="3">


                                </Button>


                                <Button
                                    android:id="@+id/restorantCumartesiCikis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cumartesiCikis"
                                    android:layout_marginLeft="2dp"
                                    android:onClick="cumartesiCikis"
                                    android:layout_weight="3">


                                </Button>


                                <Button
                                    android:id="@+id/restorantCumartesiKapali"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kapali"
                                    android:layout_marginLeft="2dp"
                                    android:onClick="cumartesiKapali"
                                    android:layout_weight="3">


                                </Button>


                            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restorantPazarGiris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pazarBaslangic"
                android:onClick="pazarGiris"
                android:layout_weight="3">


            </Button>


            <Button
                android:id="@+id/restorantPazarCikis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pazarCikis"
                android:layout_marginLeft="2dp"
                android:onClick="pazarCikis"
                android:layout_weight="3">


            </Button>


            <Button
                android:id="@+id/restorantPazarKapali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kapali"
                android:layout_marginLeft="2dp"
                android:onClick="pazarKapali"
                android:layout_weight="3">


            </Button>


        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<CheckBox
    android:id="@+id/icMekan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/icMekan"
    android:layout_marginTop="20dp"
    android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/disMekan"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/disMekan"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>


         <CheckBox
             android:id="@+id/yerindeServis"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/yerindeServis"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/paketServis"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/paketServis"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/gelAl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/gelAl"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/sigaraAlani"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/sigaraAlani"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/cocukAlani"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/cocukAlani"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>

         <CheckBox
             android:id="@+id/wifi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/wifi"
             android:layout_marginTop="10dp"
             android:textColor="#660099"></CheckBox>


         </LinearLayout>


         <Button
             android:id="@+id/restorantOlusturButonu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:onClick="restorantOlustur"
             android:text="@string/restorantOlustur">
         </Button>



     </LinearLayout>
















    </ScrollView>





</LinearLayout>