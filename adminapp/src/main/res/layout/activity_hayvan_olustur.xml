<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".view.HayvanIsiOlusturActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/hayvanResmiOlustur"
                android:layout_width="300dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/eklegorsel"
                android:onClick="hayvanResmiSec"></ImageView>



            <EditText
                android:id="@+id/hayvanTuruOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hayvanturu"
                android:maxLength="30"
                android:inputType="text"></EditText>


            <EditText
                android:id="@+id/hayvanBakimiOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hayvanbakim"
                android:maxLength="600"
                android:inputType="textMultiLine"></EditText>



            <Button

                android:id="@+id/hayvanOlusturButonu"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hayvan Olustur"
                android:onClick="hayvanOlustur"></Button>






        </LinearLayout>



    </ScrollView>






</LinearLayout>