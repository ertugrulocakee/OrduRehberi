<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".view.SanayiOlusturActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sanayiResmiOlustur"
                android:layout_width="300dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/eklegorsel"
                android:onClick="sanayiResmiSec"></ImageView>



            <EditText
                android:id="@+id/sanayiAdiOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sanayiadi"
                android:maxLength="30"
                android:inputType="text"></EditText>


            <EditText
                android:id="@+id/sanayiTuruOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sanayi_icraat"
                android:maxLength="15"
                android:inputType="text"></EditText>


            <EditText
                android:id="@+id/sanayiTelefonOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sanayi_telefon"
                android:maxLength="20"
                android:inputType="phone"></EditText>


            <EditText
                android:id="@+id/sanayiWebOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sanayi_web"
                android:maxLength="60"
                android:inputType="text"></EditText>

            <EditText
                android:id="@+id/sanayiAciklamaOlustur"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sanayi firmas覺 hakk覺nda detayl覺 bilgiler veriniz:"
                android:maxLength="600"
                android:inputType="textMultiLine"></EditText>

            <Button

                android:id="@+id/sanayiOlusturButonu"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanayi firmas覺 Olustur"
                android:onClick="sanayiOlustur"></Button>



























        </LinearLayout>















    </ScrollView>






</LinearLayout>