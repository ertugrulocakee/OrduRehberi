<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.SanayiDetayiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">



            <ImageView
                android:id="@+id/sanayi_detayi_resim"
                android:layout_width="match_parent"
                android:layout_height="250dp"></ImageView>


            <TextView
                android:id="@+id/sanayidetayi_ad"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textAlignment="center"></TextView>


            <TextView
                android:id="@+id/sanayidetayi_alani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icons8_factory_breakdown_30"
                android:text="alan"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>


            <TextView
                android:id="@+id/sanayidetayi_bilgilendirme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/firmahakkinda"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textSize="18sp"></TextView>




            <TextView
                android:id="@+id/sanayidetayi_aciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="aciklama"
                android:justificationMode="inter_word"
                android:textSize="16sp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/sanayidetayi_Telefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    app:icon="@drawable/icons8_call_48"></Button>

                <Button
                    android:id="@+id/sanayidetayi_Web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:icon="@drawable/icons8_website_48"></Button>


                <Button
                    android:id="@+id/sanayiyeRotaYap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    app:icon="@drawable/icons8_track_order_48"></Button>



            </LinearLayout>



        </LinearLayout>



    </ScrollView>

</LinearLayout>