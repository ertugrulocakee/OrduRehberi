<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reycler_row_mekan_yorumlari_kullanici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kullaniciAdi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#660099"
            android:layout_weight="2"></TextView>


        <Button
            android:id="@+id/mekanYorumuSil"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sil"
            android:layout_weight="1"></Button>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reycler_row_mekan_yorumlari_yorum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kullaniciYorum"
            android:textSize="18sp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reycler_row_mekan_yorumlari_puan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kullaniciPuan"
            android:textColor="@color/purple_200"
            android:textAlignment="center"
            android:textSize="20sp"></TextView>


    </LinearLayout>





</LinearLayout>